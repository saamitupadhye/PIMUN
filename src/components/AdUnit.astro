---
interface Props {
  slot: string;
}

const { slot } = Astro.props;
---

<div class="ad-unit my-4" data-ad-slot={slot}>
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="ca-pub-YOUR_PUBLISHER_ID"
       data-ad-slot={slot}
       data-ad-format="auto"
       data-full-width-responsive="true"></ins>
</div>

<script>
  (window.adsbygoogle = window.adsbygoogle || []).push({});
</script>