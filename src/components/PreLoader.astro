<div id="preloader" class="fixed inset-0 bg-white z-50 flex flex-col items-center justify-center">
  <div class="text-center p-4">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-blue-900 mb-2">PIMUN Press</h1>
      <div class="w-16 h-1 bg-blue-600 mx-auto"></div>
    </div>
    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-900"></div>
  </div>
</div>

<script>
  window.addEventListener('load', () => {
    setTimeout(() => {
      document.getElementById('preloader')?.classList.add('opacity-0', 'pointer-events-none');
      setTimeout(() => {
        document.getElementById('preloader')?.remove();
      }, 1000);
    }, 1500); // Show for 1.5 seconds minimum
  });
</script>

<style>
  #preloader {
    transition: opacity 0.5s ease-in-out;
  }
</style>