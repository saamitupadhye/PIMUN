---
interface Props {
  id: string;
  title: string;
  channel: string;
  event: string;
  date: string;
  summary: string;
  imageUrl: string;
  author: string;
}

const { id, title, channel, event, date, summary, imageUrl, author } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  <div class="relative w-full h-48">
    <div 
      class="absolute inset-0 bg-cover bg-center"
      style={`background-image: url(${imageUrl});`}
      role="img"
      aria-label={title}
    >
      <div class="absolute inset-0 bg-black opacity-10"></div>
    </div>
  </div>
  <div class="p-4">
    <div class="flex justify-between items-center mb-2">
      <span class="text-sm text-blue-600">{channel}</span>
      <span class="text-sm text-gray-500">{date}</span>
    </div>
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm text-gray-700 mb-2">
      {event}
    </span>
    <p class="text-gray-600 mb-2">{summary}</p>
    <p class="text-sm text-gray-500">By {author}</p>
  </div>
</article>

<style>
  .bg-cover {
    pointer-events: none;
    user-select: none;
    -webkit-user-select: none;
    -webkit-touch-callout: none;
  }
</style>