---
import Layout from '../layouts/Layout.astro';
import TeamMemberCard from '../components/TeamMemberCard.astro';
import { teamMembers } from '../data/teamData';

const secretariat = teamMembers.filter(member => member.category === 'secretariat');
const executiveBoard = teamMembers.filter(member => member.category === 'executive-board');
const ocs = teamMembers.filter(member => member.category === 'oc');
---

<Layout title="Meet the Team - PIMUN Press">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-12">Meet the Team</h1>

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8">The Secretariat</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {secretariat.map(member => (
          <TeamMemberCard {...member} />
        ))}
      </div>
    </section>

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8">Executive Board</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {executiveBoard.map(member => (
          <TeamMemberCard {...member} />
        ))}
      </div>
    </section>

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8">Organizing Committee</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {ocs.map(member => (
          <TeamMemberCard {...member} />
        ))}
      </div>
    </section>
  </main>
</Layout>